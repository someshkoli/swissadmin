<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/styles/styles.css">

    <title>PC Info</title>
  </head>
  <body>
    <h2 style="display:none;" id="pcAddr"><%= pcs[0].address%></h2>
    <div class="container" style="text-align: center; margin-top: 15px">
      <h1>PC Info</h1>
    </div>

    <div class="container" style="margin-top: 15px">
      <h2>Ram Info</h2>
      <table class="table table-bordered ram-table">
        <tbody>
          <tr>
            <th>RAM Status</th>
            <td><span id="free-ram">-</span>/<span id="total-ram">-</span></th>
          </tr>
        </tbody>
      </table>

      <h2 style="margin-top: 30px">Send Message</h2>
      <input id="text" type="text" class="form-control" style="width: 500px">
      <button id="send" class="btn btn-primary" style="margin-top: 10px">Send</button>

      <h2 style="margin-top: 30px">View contents of directory</h2>
      <input id="dir-text" type="text" class="form-control" style="width: 500px">
      <button id="dirSend" class="btn btn-primary" style="margin-top: 10px">Send</button>
      <button id="dirClear" class="btn btn-primary" style="margin-top: 10px">Clear</button>
      <div class="container" style="margin-top: 15px">
        <p id="content">-</p>
      </div>
    </div>
    <h2 style="display:none;" id="username"><%=pcs[0].username %></h2>
    <h2 style="display:none;" id="password"><%=pcs[0].password %></h2>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="http://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="/scripts/info.js"></script>
  </body>
</html>